    "configuration": {
      "title": "Mermaid Chart",
      "properties": {
        "mermaidChart.baseUrl": {
          "type": "string",
          "default": "https://www.mermaidchart.com",
          "description": "Base URL for Mermaid Chart"
        },
        "mermaid.vscode.dark": {
          "type": "string",
          "enum": [
            "dark",
            "neo-dark",
            "redux-dark"
          ],
          "default": "neo-dark",
          "description": "Default mermaid theme used for dark theme"
        },
        "mermaid.vscode.light": {
          "type": "string",
          "enum": [
            "neo",
            "base",
            "redux",
            "default",
            "forest",
            "neutral",
            "mc"
          ],
          "default": "neo",
          "description": "Default mermaid theme used for light theme"
      }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExtensionActivityBar",
          "title": "Mermaid Plugin",
          "icon": "images/mermaid-icon-32-preview.png"
        }
      ]
    },
 
    "views": {
      "myExtensionActivityBar": [
        {
          "id": "mermaidWebview",
          "name": "Mermaid Plugin",
          "type": "webview"
          
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mermaidChart.refresh",
          "group": "navigation",
          "when": "view == mermaidChart"
        }
      ],
      "view/item/context": [
        {
          "command": "mermaidChart.insertUuidIntoEditor",
          "when": "viewItem == document",
          "group": "inline@01"
          
        },
        {
          "command": "mermaidChart.downloadDiagram",
          "when": "viewItem == document",
          "group": "inline@02"
        }
      ],
      "editor/context": [
        {
          "command": "mermaidChart.preview",
          "when": "resourceExtname =~ /^\\.(mmd|mermaid)$/ || resourceLangId =~ /^mermaid/",
          "group": "navigation"
        },
        {
          "command": "mermaid.connectDiagramToMermaidChart",
          "when": "resourceExtname =~ /^\\.(mmd|mermaid)$/ || resourceLangId =~ /^mermaid/",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+s",
        "command": "mermaidChart.syncDiagramWithMermaid",
        "when": "editorLangId =~ /^mermaid/"
      },
      {
        "key": "cmd+s",
        "command": "mermaidChart.syncDiagramWithMermaid",
        "when": "editorLangId =~ /^mermaid/",
        "mac": "cmd+s"
      }
    ],
    "commands": [
      {
        "command": "mermaidChart.insertUuidIntoEditor",
        "title": "Link to Diiagram"
      },
      {
        "command": "mermaidChart.downloadDiagram",
        "title": "Download"
      },
      {
        "command": "mermaidChart.syncDiagramWithMermaid",
        "title": "MermaidChart: Sync Diagram"
      },
      {
        "command": "mermaidChart.viewMermaidChart",
        "title": "MermaidChart: View Diagram"
      },
      {
        "command": "mermaidChart.preview",
        "title": "MermaidChart: Preview Diagram"
      },
      {
        "command": "mermaidChart.logout",
        "title": "MermaidChart: Logout"
      },
      {
        "command": "mermaidChart.login",
        "title": "MermaidChart: Login"
      },
      {
        "command": "mermaidChart.createMermaidFile",
        "title": "MermaidChart: Create Diagram"
      },
      {
        "command": "mermaidChart.editMermaidChart",
        "title": "Edit Diagram in Mermaid chart"
      },
      {
        "command": "mermaidChart.editLocally",
        "title": "Edit Diagram"
      },
      {
        "command": "mermaidChart.focus",
        "title": "Mermaid Charts: Focus on View",
        "icon": "images/mermaid-icon-16.png"
      },
      {
        "command": "mermaidChart.refresh",
        "title": "Refresh"
      },
      {
        "command": "mermaid.connectDiagramToMermaidChart",
        "title": "MermaidChart: Connect Diagram"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm compile",
    "precompile": "cd webview && pnpm install && pnpm build",
    "compile": "pnpm install && tsc -p ./ --noEmit && esbuild ./src/extension.ts --sourcemap --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "tsc -p ./ --noEmit --watch",
    "pretest": "pnpm compile && pnpm lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/uuid": "^9.0.2",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.18.13",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "uuid": "^9.0.0"
  }
}
