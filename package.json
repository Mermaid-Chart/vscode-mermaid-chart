{
  "name": "vscode-mermaid-chart",
  "publisher": "MermaidChart",
  "displayName": "Mermaid Chart",
  "description": "The Mermaid Chart extension for Visual Studio Code enables developers to view and edit diagrams stored in Mermaid charts within the Visual Studio Code. With integration to the Mermaid Chart service, this extension allows users to attach diagrams to their code. Gain quick access to edit diagrams.",
  "version": "1.0.3",
  "icon": "images/mermaid-chart.png",
  "repository": "github:Mermaid-Chart/vscode-mermaid-chart",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "mermaid",
    "diagram",
    "mermaid chart",
    "visio",
    "flowchart",
    "sequence diagram",
    "gantt",
    "pie chart",
    "class diagram",
    "state diagram",
    "entity relationship diagram",
    "user journey diagram",
    "user journey",
    "journey",
    "pie",
    "sequence",
    "flow",
    "flow chart",
    "gantt chart",
    "architecture",
    "uml"
  ],
  "capabilities": {
    "authentication": [
      "mermaidChartAuthProvider"
    ]
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mermaid",
        "aliases": [
          "Mermaid",
          "mermaid"
        ],
        "extensions": [
          ".mmd",
          ".mermaid"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.flowchart",
        "aliases": [
          "Mermaid Flowchart",
          "mermaid flowchart"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.sequenceDiagram",
        "aliases": [
          "Mermaid Sequence Diagram",
          "mermaid sequence diagram"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.erDiagram",
        "aliases": [
          "Mermaid Er Diagram",
          "mermaid er diagram"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.c4Diagram",
        "aliases": [
          "Mermaid C4 Diagram",
          "mermaid c4 diagram"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.classDiagram",
        "aliases": [
          "Mermaid Class Diagram",
          "mermaid class diagram"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.gantt",
        "aliases": [
          "Mermaid Gantt",
          "mermaid gantt"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.gitGraph",
        "aliases": [
          "Mermaid GitGraph",
          "mermaid gitgraph"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.info",
        "aliases": [
          "Mermaid Info",
          "mermaid info"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.journey",
        "aliases": [
          "Mermaid Journey",
          "mermaid journey"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.pie",
        "aliases": [
          "Mermaid Pie",
          "mermaid pie"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.requirementDiagram",
        "aliases": [
          "Mermaid Requirement Diagram",
          "mermaid requirement diagram"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mermaid.stateDiagram",
        "aliases": [
          "Mermaid State Diagram",
          "mermaid state diagram"
        ],
        "extensions": [".mmd", ".mermaid"],
        "configuration": "./language-configuration.json"
      }
    ],
   "themes": [
      {
        "label": "Mermaid Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/mermaid-dark-color-theme.json"
      },
      {
        "label": "Mermaid Light",
        "uiTheme": "vs",
        "path": "./themes/mermaid-light-color-theme.json"
      }
    ],
    "grammars": [
      {
        "language": "mermaid.flowchart",
        "scopeName": "source.mermaid.flowchart",
        "path": "./syntaxes/mermaid-flowchart.tmLanguage.json"
      },
      {
        "language": "mermaid.sequenceDiagram",
        "scopeName": "source.mermaid.sequenceDiagram",
        "path": "./syntaxes/mermaid-sequenceDiagram.tmLanguage.json"
      },
      {
        "language": "mermaid.classDiagram",
        "scopeName": "source.mermaid.classDiagram",
        "path": "./syntaxes/mermaid-classDiagram.tmLanguage.json"
      },
      {
        "language": "mermaid.erDiagram",
        "scopeName": "source.mermaid.erDiagram",
        "path": "./syntaxes/mermaid-erDiagram.tmLanguage.json"
      },
      {
        "language": "mermaid.c4Diagram",
        "scopeName": "source.mermaid.c4Diagram",
        "path": "./syntaxes/mermaid-c4Diagram.tmLanguage.json"
      },
      {
        "language": "mermaid.gantt",
        "scopeName": "source.mermaid.gantt",
        "path": "./syntaxes/mermaid-gantt.tmLanguage.json"
      },
      {
        "language": "mermaid.gitGraph",
        "scopeName": "source.mermaid.gitGraph",
        "path": "./syntaxes/mermaid-gitGraph.tmLanguage.json"
      },
      {
        "language": "mermaid.journey",
        "scopeName": "source.mermaid.journey",
        "path": "./syntaxes/mermaid-journey.tmLanguage.json"
      },
      {
        "language": "mermaid.info",
        "scopeName": "source.mermaid.info",
        "path": "./syntaxes/mermaid-info.tmLanguage.json"
      },
      {
        "language": "mermaid.requirementDiagram",
        "scopeName": "source.mermaid.requirementDiagram",
        "path": "./syntaxes/mermaid-requirementDiagram.tmLanguage.json"
      },
      {
        "language": "mermaid.pie",
        "scopeName": "source.mermaid.pie",
        "path": "./syntaxes/mermaid-pie.tmLanguage.json"
      },
      {
        "language": "mermaid.stateDiagram",
        "scopeName": "source.mermaid.stateDiagram",
        "path": "./syntaxes/mermaid-stateDiagram.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Mermaid Chart",
      "properties": {
        "mermaidChart.baseUrl": {
          "type": "string",
          "default": "https://www.mermaidchart.com",
          "description": "Base URL for Mermaid Chart"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "mermaidChart",
          "name": "mermaidChart"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mermaidChart.refresh",
          "group": "navigation",
          "when": "view == mermaidChart"
        }
      ],
      "editor/context": [
        {
          "command": "mermaidChart.preview",
          "when": "resourceExtname =~ /^\\.(mmd|mermaid)$/ || resourceLangId =~ /^mermaid/",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "mermaidChart.viewMermaidChart",
        "title": "View Diagram"
      },
      {
        "command": "mermaidChart.preview",
        "title": "Preview Mermaid Diagram"
      },
      {
        "command": "mermaidChart.logout",
        "title": "MermaidChart Logout"
      },
      {
        "command": "mermaidChart.login",
        "title": "MermaidChart Login"
      },
      {
        "command": "mermaidChart.createMermaidFile",
        "title": "New Mermaid Diagram"
      },
      {
        "command": "mermaidChart.editMermaidChart",
        "title": "Edit Diagram"
      },
      {
        "command": "mermaidChart.focus",
        "title": "Mermaid Charts: Focus on View",
        "icon": "images/mermaid-icon-16.png"
      },
      {
        "command": "mermaidChart.refresh",
        "title": "Refresh"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm compile",
    "precompile": "cd webview && pnpm install && pnpm build",
    "compile": "pnpm install && tsc -p ./ --noEmit && esbuild ./src/extension.ts --sourcemap --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "tsc -p ./ --noEmit --watch",
    "pretest": "pnpm compile && pnpm lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/uuid": "^9.0.2",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.18.13",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "uuid": "^9.0.0"
  }
}
