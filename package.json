    "configuration": {
      "title": "Mermaid Chart",
      "properties": {
        "mermaidChart.baseUrl": {
          "type": "string",
          "default": "https://www.mermaidchart.com",
          "description": "Base URL for Mermaid Chart"
        },
        "mermaid.vscode.dark": {
          "type": "string",
          "enum": [
            "dark"
          ],
          "default": "dark",
          "description": "Default mermaid theme used for dark theme"
        },
        "mermaid.vscode.light": {
          "type": "string",
          "enum": [
            "default",
            "base",
            "default",
            "forest",
            "neutral",
            "mc"
          ],
          "default": "default",
          "description": "Default mermaid theme used for light theme"
        },
        "mermaidChart.aiVendor": {
          "type": "string",
          "default": "copilot",
          "enum": ["copilot", "openai", "anthropic"],
          "enumDescriptions": [
            "GitHub Copilot",
            "OpenAI models"
          ],
          "description": "The AI vendor to use for diagram generation"
        },
        "mermaidChart.aiModelFamily": {
          "type": "string",
          "default": "gpt-4o",
          "enum": ["gpt-4o", "gpt-4", "gpt-4-turbo", "gpt-3.5-turbo"],
          "enumDescriptions": [
            "GPT-4o (Recommended for best results)",
            "GPT-4",
            "gpt-4-turbo",
            "GPT-3.5 Turbo"
          ],
          "description": "The AI model family to use for diagram generation"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mermaidActivityBar",
          "title": "Mermaid Chart",
          "icon": "images/mermaid-icon-32-preview.svg"
        }
      ]
    },
    "views": {
      "mermaidActivityBar": [
        {
          "id": "mermaidChart",
          "name": " ",
          "contextualOnly": true,
          "when": "mermaid.showChart"
        },
        {
          "id": "mermaidWebview",
          "name": "Mermaid Chart",
          "type": "webview",
          "contextualOnly": true,
          "when": "mermaid.showWebview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mermaidChart.refresh",
          "group": "navigation",
          "when": "view == mermaidChart"
        },
        {
          "command": "mermaidChart.diagramHelp",
          "when": "view == mermaidChart",
          "group": "navigation"
        },
        {
          "command": "mermaidChart.diagramHelp",
          "when": "view == mermaidWebview",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mermaidChart.insertUuidIntoEditor",
          "when": "viewItem == document",
          "group": "inline@01"
        },
        {
          "command": "mermaidChart.downloadDiagram",
          "when": "viewItem == document",
          "group": "inline@02"
        }
      ],
      "editor/context": [
        {
          "command": "mermaidChart.preview",
          "when": "resourceExtname =~ /^\\.(mmd|mermaid)$/ || resourceLangId =~ /^mermaid/",
          "group": "navigation"
        },
        {
          "command": "mermaidChart.connectDiagramToMermaidChart",
          "when": "resourceExtname =~ /^\\.(mmd|mermaid)$/ || resourceLangId =~ /^mermaid/",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+s",
        "command": "mermaidChart.syncDiagramWithMermaid",
        "when": "editorLangId =~ /^mermaid/"
      },
      {
        "key": "cmd+s",
        "command": "mermaidChart.syncDiagramWithMermaid",
        "when": "editorLangId =~ /^mermaid/",
        "mac": "cmd+s"
      },
      {
        "command": "mermaidChart.showCompletions",
        "key": "ctrl+shift+k",
        "when": "editorLangId =~ /^mermaid/"
      }
    ],
    "commands": [
      {
        "command": "mermaidChart.diagramHelp",
        "title": "Diagram help"
      },
      {
        "command": "mermaidChart.insertUuidIntoEditor",
        "title": "Link Diagram"
      },
      {
        "command": "mermaidChart.downloadDiagram",
        "title": "Download"
      },
      {
        "command": "mermaidChart.syncDiagramWithMermaid",
        "title": "MermaidChart: Sync Diagram"
      },
      {
        "command": "mermaidChart.viewMermaidChart",
        "title": "MermaidChart: View Diagram"
      },
      {
        "command": "mermaidChart.preview",
        "title": "MermaidChart: Preview Diagram"
      },
      {
        "command": "mermaidChart.logout",
        "title": "MermaidChart: Logout"
      },
      {
        "command": "mermaidChart.login",
        "title": "MermaidChart: Login"
      },
      {
        "command": "mermaidChart.createMermaidFile",
        "title": "MermaidChart: Create Diagram"
      },
      {
        "command": "mermaidChart.focus",
        "title": "Mermaid Charts: Focus on View",
        "icon": "images/mermaid-icon-16.png"
      },
      {
        "command": "mermaidChart.refresh",
        "title": "Refresh"
      },
      {
        "command": "mermaidChart.connectDiagramToMermaidChart",
        "title": "MermaidChart: Connect Diagram"
      },
      {
        "command": "mermaidChart.showCompletions",
        "title": "Trigger Mermaid Completions"
      },
      {
        "command": "extension.openCopilotChat",
        "title": "Open Copilot Chat"
      }
    ],
    "chatParticipants": [
      {
        "id": "mermaid-ai",
        "fullName": "Mermaid AI Chat",
        "name": "mermaid-ai",
        "description": "create you mermaid diagram?",
        "isSticky": true
      }
    ],
    "languageModelTools": [
      {
        "name": "mermaid-diagram-creator",
        "tags": ["vscode_editing"],
        "displayName": "Mermaid Diagram Creator",
        "modelDescription": "Create diagrams using Mermaid syntax from natural language descriptions",
        "icon": "$(pencil)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "description": "Natural language description of the diagram to create"
            },
            "type": {
              "type": "string",
              "enum": ["flowchart", "sequence", "class", "state", "er", "gantt", "pie"],
              "description": "Specific diagram type to create (optional)",
              "default": "flowchart"
            }
          },
          "required": ["description"]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm compile",
    "precompile": "pnpm --filter ./webview build",
    "compile": "tsc -p ./ --noEmit && esbuild ./src/extension.ts --sourcemap --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "tsc -p ./ --noEmit --watch",
    "pretest": "pnpm compile && pnpm lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  },
